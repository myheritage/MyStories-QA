{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["node", "@playwright/test", "dotenv"]
  },
  "include": ["global.d.ts", "tests/**/*.ts", "playwright.config.ts", "custom-types.d.ts"],
  "exclude": ["node_modules"]
}
